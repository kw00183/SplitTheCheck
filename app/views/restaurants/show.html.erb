<div class="restaurant_container">

<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<% if alert %>
  <aside id="alert"><%= alert %></aside>
<% end %>

<p>
  <strong><%= @restaurant.name %></strong>
</p>

<p>
  <%= @restaurant.address %>
</p>

<p>
  <%= @restaurant.city %>, <%= @restaurant.state %> <%= @restaurant.zip %>
</p>

<br>

<p>
  <strong>Will Split:</strong>
  <%= @restaurant.will_split_count %> votes
</p>

<p>
  <strong>Won't Split:</strong>
  <%= @restaurant.wont_split_count %> votes
</p>

<br>
<div>
  <%= button_to 'Edit', edit_restaurant_path(@restaurant), :method => :get, class: "floated" %>
  <%= button_to 'Cancel', restaurants_path, :method => :get, class: "floated" %>
</div>

</div>
